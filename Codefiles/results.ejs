        function graphActivity(data) {
                var margin = {
                    "top": 10,
                    "right": 10,
                    "bottom": 30,
                    "left": 50
                },
                width = $("#analysis").width()-20,
                height = 500;

                var x = d3.scale.ordinal()
                .domain(data.buckets.map(function(d) {
                    return d;}))
                .rangeRoundBands([0, width], 0);


                var y = d3.scale.linear()
                .domain([0, d3.max(data.values)])
                .range([height, 0]);

                var xAxis = d3.svg.axis().scale(x).orient("bottom");

                var yAxis = d3.svg.axis().scale(y).orient("left");

                var svgContainer = d3.select($("#analysis")[0]).append("svg")
                .attr("class", "chart")
                .attr("width", width + margin.left + margin.right)
                .attr("height", height + margin.top + margin.bottom).append("g")
                .attr("transform", "translate(" + margin.left + "," + margin.right + ")");


                var tip = d3.tip()
                .attr('class', 'd3-tip')
                .offset([-10, 0])
                .html(function(d, i) {
                    return  "Start: " + "<span style='color:red'>" + data.starting_times[i] + "</span><br>"
                    + "End: <span style='color:red'>" + data.ending_times[i] + "</span><br>" 
                    + "Messages: <span style='color:red'>" + d + "</span><br>" 
                    + "Most Talkative: " + "<span style='color:red'>" + data.most_talkative[i] + "</span><br>"
                    + "Least Talkative: " + "<span style='color:red'>" + data.least_talkative[i] + "</span><br>"
                    + "Summary: " + "<span style='color:red'>" + data.summaries[i] + "</span>";

                })

                svgContainer.append("g")
                .attr("class", "x axis")
                .attr("transform", "translate( 0," + height + ")")
                .call(xAxis);

                svgContainer.call(tip);


                svgContainer.append("g")
                .attr("class", "y axis").call(yAxis)
                .append("text")
                .attr("transform", "rotate(-90)")
                .attr("y", 6)
                .attr("dy", ".71em")
                .style("text-anchor", "end")
                .text("Value");

                svgContainer.selectAll(".bar").data(data.values).enter().append("rect")
                .attr("class", "bar")
                .attr("x", function(d, i) {
                    return i * x.rangeBand();
                })
                .attr("y", function(d) {
                    return y(d);
                })
                .attr("width", function(){
                    return x.rangeBand();
                })
                .attr("height", function(d) {
                    return height -y(d);
                }).on('mouseover', tip.show)
                .on('mouseout', tip.hide);
            }
        
            function graphCumulativeActivity(data) {
                var margin = {
                    "top": 10,
                    "right": 10,
                    "bottom": 30,
                    "left": 50
                },
                width = $("#analysis1").width()-20,
                height = 500;

                var x = d3.scale.ordinal()
                .domain(data.buckets.map(function(d) {
                    return d;}))
                .rangeRoundBands([0, width], 0);

                var y = d3.scale.linear()
                .domain([0, d3.max(data.cumulative_histogram)])
                .range([height, 0]);

                var xAxis = d3.svg.axis().scale(x).orient("bottom");

                var yAxis = d3.svg.axis().scale(y).orient("left");

                var svgContainer = d3.select($("#analysis1")[0]).append("svg")
                .attr("class", "chart")
                .attr("width", width + margin.left + margin.right)
                .attr("height", height + margin.top + margin.bottom).append("g")
                .attr("transform", "translate(" + margin.left + "," + margin.right + ")");

                var tip = d3.tip()
                    .attr('class', 'd3-tip')
                    .offset([-10, 0])
                    .html(function(d, i) {
                        return  "Bucket: " + "<span style='color:red'>" + i + "</span><br>"
                                        + "Values: <span style='color:red'>" + d + "</span><br>";

                })

                svgContainer.append("g")
                .attr("class", "x axis")
                .attr("transform", "translate( 0," + height + ")")
                .call(xAxis);
                
                svgContainer.call(tip);

                
                svgContainer.append("g")
