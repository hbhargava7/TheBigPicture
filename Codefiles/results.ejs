        function PrettyPrintList(list) {
            var ret = '';
            for(var i = 0; i < list.length; i++) {
                ret += list[i];
                if(i !== list.length - 1) {
                    ret += ', ';
                }
            }
            return ret;
        }

        function ConfirmEmailSubmission(user_id, email, raw_data) {
            if(confirm("Would you like the raw generated data to be sent to you by email?") === true) {
                window.open('mailto:' + email + '?subject=Here\'s the conversation data that you requested ' + user_id + '!&body=' + JSON.stringify(raw_data));
            }
        }

        ConfirmEmailSubmission(data.user_id, data.email, data);
    
        //setup globals
        document.getElementById('startDate').innerHTML = "&nbsp" + data.start_date;
        document.getElementById('endDate').innerHTML = "&nbsp" + data.end_date;
        document.getElementById('messageCount').innerHTML = "&nbsp" + data.total_messages;
        document.getElementById('mostProbableCouple').innerHTML = "&nbsp" + (data.most_probable_couple[1] === '' ? data.most_probable_couple[0] : PrettyPrintList(data.most_probable_couple));
